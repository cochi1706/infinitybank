<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vị trí"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto" />

    <!-- Thêm input cho địa chỉ -->
    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập địa chỉ (VD: 5 Nguyễn Thị Thập)"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" /> <!-- Sửa tại đây -->

    <!-- Nút tìm kiếm địa chỉ -->
    <Button
        android:id="@+id/btn_search_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm địa chỉ"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto" />

    <!-- MapView để hiển thị bản đồ -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

    <!-- TextView để hiển thị thông tin lộ trình -->
    <TextView
        android:id="@+id/tv_route_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thông tin lộ trình sẽ hiển thị ở đây"
        android:textSize="16sp"
        android:fontFamily="@font/roboto" />

</LinearLayout>